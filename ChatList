


/**
 * @author tyste
 *
 */
public class ChatList {

	private Node head; // front of list
	private int size;

	/**
		* 
		*/
		public ChatList() {
			size = 0;
		}

	/**
	 * @return
	 */
	public int size() {
		return size;
	}

	
	public TextMessage insertFirst(Node n) {
		if (isEmpty()) {
			head = n;
		} else {
			n.next = head;
			head = n;
		}
		size++;
		return head.getElement();
	}

	/**
	 * @return
	 */
	public TextMessage deleteLastMessage() {
		Node remove = head;
		if (!isEmpty())
			head = head.next;
		size--;
		return remove.getElement();
	}

	/**
	 * @return
	 */
	public TextMessage deleteFirstMessage() {
		if(head == null) {
			return head.getElement();
		}
		Node tail = head;
		Node previous = null;
		while (tail.next != null) {
			previous = tail;
			tail = tail.next;
		}
		previous.next = null;
		return tail.getElement();
	}
	/**
	 * @return
	 */
	public TextMessage peek() {
		return head.getElement();
	}

	/**
	 * @return
	 */
	public String print() {
		Node temp = head;
		String tempString = "";
		while (temp != null) {
			tempString += temp.getElement().getMember().getFirstName();
			tempString += " ";
			tempString += temp.getElement().getMember().getLastName();
			tempString += " Messaged: ";
			tempString += temp.getElement().getText();
			tempString += "\n"; 
			temp = temp.next;
		}
		return tempString;
	}

	/**
	 * @return
	 */
	public boolean isEmpty() {
		return (size == 0);
	}
}
